<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#788cb3"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnMyProperties"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/properties_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/btnMyProperties"
        android:text="@string/btn_MyProperties"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnTenants"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/tenants_launcher"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="53dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Tenants"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btnTenants"
        android:layout_alignRight="@+id/btnTenants"
        android:layout_alignEnd="@+id/btnTenants" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/help_launcher"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnHelp"
        android:layout_below="@+id/btnHelp"
        android:layout_marginRight="16dp"
        android:text="Help"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <Button
        android:id="@+id/btnLinks"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/links_launcher"
        android:layout_alignTop="@+id/btnHelp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:id="@+id/tvwLinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Useful Links"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btnLinks"
        android:layout_alignRight="@+id/btnLinks"
        android:layout_alignEnd="@+id/btnLinks" />




    <Button
        android:id="@+id/btnExit"
        android:background="@drawable/exit_launcher"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/tvwExit"
        android:layout_alignRight="@+id/tvwLinks"
        android:layout_alignEnd="@+id/tvwLinks" />

    <TextView
        android:id="@+id/tvwExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>
