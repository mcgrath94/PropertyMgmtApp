<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#788cb3"
    tools:context="com.example.propertymgmtapp.TenantSms">

    <Button
        android:id="@+id/btnViewAllTenants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etTennantId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:hint="Enter ID"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnViewAllTenants" />

    <Button
        android:id="@+id/btnFindTenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/etTennantId"
        android:layout_toEndOf="@+id/etTennantId" />

    <EditText
        android:id="@+id/etTenantMobile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tenant Mobile"
        android:inputType="phone"
        android:layout_below="@+id/btnViewAllTenants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etTenantName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tenant Name"
        android:layout_below="@+id/etTenantMobile1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etSmsText"
        android:layout_below="@+id/etTenantName1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SMS"
        android:id="@+id/btnTenantSendSms"
        android:layout_below="@+id/etSmsText"
        android:layout_toLeftOf="@+id/btnFindTenant"
        android:layout_toStartOf="@+id/btnFindTenant" />




</RelativeLayout>
