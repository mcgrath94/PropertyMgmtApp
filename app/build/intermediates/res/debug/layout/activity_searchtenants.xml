<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#788cb3"
    tools:context=".SearchTenants" >

    <Button
        android:id="@+id/btnViewAllTenants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="View All" />

    <EditText
        android:id="@+id/edtTenantId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter tenant ID"
        android:inputType="number"
        android:layout_below="@+id/btnViewAllTenants"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnFindTenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edtTenantId"
        android:layout_toRightOf="@+id/edtTenantId"
        android:text="Find" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/edtTenantId"
        android:layout_alignRight="@+id/button3"
        android:layout_below="@+id/btnFindTenant" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edtTenantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tenant Name"
                android:ems="10" />

            <EditText
                android:id="@+id/edtTenantMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tenant Mobile"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edtTenantEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tenant Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtTenantAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tenant Address"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/edtTenantRent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tenant Rent"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtTenantDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tenant Deposit"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtTenantNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tenant Notes"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Send SMS" />

    <Button
        android:id="@+id/btnDeleteTenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnViewAllTenants"
        android:text="Delete" />

    <Button
        android:id="@+id/btnModifyTenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Modify" />

</RelativeLayout>
